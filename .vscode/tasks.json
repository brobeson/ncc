{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "NCC: All Checks",
      "detail": "Run all the code quality checks.",
      "dependsOn": ["NCC: PyLint"]
    },
    {
      "label": "NCC: PyLint",
      "detail": "Run PyLint on the code.",
      "type": "shell",
      "command": "pylint",
      "args": ["ncc.py"],
      "problemMatcher": {
        "applyTo": "allDocuments",
        "fileLocation": "relative",
        "owner": "ncc: pylint",
        "source": " ",
        "severity": "error",
        "pattern": {
          "regexp": "^([^:]+):(\\d+):(\\d+):\\s([A-Z]\\d+):\\s+(.*)\\s\\((.+)\\)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "code": 6,
          "message": 5
        }
      }
    }
  ]
}
