{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "NCC: All Checks",
      "detail": "Run all the code quality checks.",
      "dependsOn": [
        "NCC: Black",
        "NCC: PyLint"
      ]
    },
    {
      "label": "NCC: Black",
      "detail": "Format Python code with Black.",
      "type": "shell",
      "command": "black",
      "args": [
        "."
      ],
      "problemMatcher": []
    },
    {
      "label": "NCC: PyLint",
      "detail": "Run PyLint on the code.",
      "type": "shell",
      "command": "pylint",
      "args": [
        "ncc.py"
      ],
      "problemMatcher": {
        "applyTo": "allDocuments",
        "fileLocation": "relative",
        "owner": "ncc: pylint",
        "source": " ",
        "severity": "error",
        "pattern": {
          "regexp": "^([^:]+):(\\d+):(\\d+):\\s([A-Z]\\d+):\\s+(.*)\\s\\((.+)\\)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "code": 6,
          "message": 5
        }
      }
    },
    {
      "label": "NCC: MyPy",
      "detail": "Check Python type hints with MyPy.",
      "type": "shell",
      "command": "mypy",
      "args": ["."],
      "problemMatcher": {
        "applyTo": "allDocuments",
        "fileLocation": "relative",
        "owner": "ncc: mypy",
        "source": " ",
        "severity": "error",
        "pattern": {
          "regexp": "^([^:]+):(\\d+):\\s([^:]+):\\s(.+)$",
          "file": 1,
          "line": 2,
          "severity": 3,
          "message": 4
        }
      }
    }
  ]
}